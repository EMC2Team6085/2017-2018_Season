package org.firstinspires.ftc.teamcode.Season16and17;

import com.qualcomm.robotcore.eventloop.opmode.Disabled;
import com.qualcomm.robotcore.hardware.HardwareMap;
import com.qualcomm.robotcore.eventloop.opmode.OpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.hardware.DcMotor;
import com.qualcomm.robotcore.hardware.DcMotorSimple;
import com.qualcomm.robotcore.robot.Robot;
import com.qualcomm.robotcore.util.Range;
import com.qualcomm.robotcore.util.ElapsedTime;

import org.firstinspires.ftc.teamcode.Season16and17.HardwareMapping;

/**
 * Created by colin on 10/27/16.
 */

@TeleOp(name="DUCK", group="Outreach")
public class Duck extends OpMode {

    /* Declare OpMode members. */
    DuckHM robot = new DuckHM(); // use the class created to define a Pushbot's hardware
    // could also use HardwarePushbotMatrix class.


    /*
     * Code to run ONCE when the driver hits INIT
     */
    @Override
    public void init() {
        /* Initialize the hardware variables.
         * The init() method of the hardware class does all the work here
         */
        robot.init(hardwareMap);

        // Send telemetry message to signify robot waiting;
        telemetry.addData("Say", "Hello Driver");    //
    }

    /*
     * Code to run REPEATEDLY after the driver hits INIT, but before they hit PLAY
     */
    @Override
    public void init_loop() {
    }

    /*
     * Code to run ONCE when the driver hits PLAY
     */
    @Override
    public void start() {
    }

    /*
     * Code to run REPEATEDLY after the driver hits PLAY but before they hit STOP
     */
    @Override
    public void loop() {
        double left;
        double right;
        double left_up;
        double right_up;
        double left_down;
        double right_down;

        // Run wheels in tank mode (note: The joystick goes negative when pushed forwards, so negate it)
        left = -gamepad1.left_stick_y;
        right = -gamepad1.right_stick_y;
        left_up = -gamepad1.left_stick_x;
        left_down = -gamepad1.left_stick_x;
        right_up = -gamepad1.right_stick_x;
        right_down = -gamepad1.right_stick_x;
        robot.leftMotor.setPower(-left);
        robot.rightMotor.setPower(right);
        robot.leftMotor.setPower(-left_up);
        robot.leftMotor.setPower(left_down);
        robot.rightMotor.setPower(right_up);
        robot.rightMotor.setPower(-right_down);

        // Send telemetry message to signify robot running;
        telemetry.addData("left", "%.2f", left);
        telemetry.addData("right", "%.2f", right);
        telemetry.addData("bottom left", "%.2f", left_down);
        telemetry.addData("top left", "%.2f", left_up);
        telemetry.addData("bottom right", "%.2f", right_down);
        telemetry.addData("top right", "%.2f", right_up);
    }
}
